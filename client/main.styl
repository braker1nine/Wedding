/* Define Stylus Variables */
noise = url('/../images/noise.jpg')
backgroundGradient = -webkit-linear-gradient(top, rgba(0,0,0,0.3), rgba(0, 0, 0, 0.15) 100px, rgba(0,0,0,0) 52%), -webkit-linear-gradient(bottom, rgba(0,0,0,0.2), rgba(0, 0, 0, 0.1) 100px, rgba(0,0,0,0) 52%)

// Colors
purple = #5d4157
cream = #fff4e4
green = #8f8e48

// Quick functions
alphaBlack(n)
	rgba(0,0,0,n)

alphaWhite(n)
	rgba(255,255,255,n)


